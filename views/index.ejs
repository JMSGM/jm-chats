<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>JM-Chat</title>

  <script src="/socket.io/socket.io.js"></script>
  <script src="js/script.js"></script>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/7.css" />
  <link rel="stylesheet" href="css/style.css" />
  <link rel="icon" href="/images/thunderbird1.ico" />
</head>
<body>
  <h1>Welcome to JMChats!</h1>

  <% if (!user) { %>
    <a href="users/createAccount">
      <button>Create Account</button>
    </a>
    <br /><br />
    <a href="users/loginAccount">
      <button>Login Account</button>
    </a>
  <% } %>
  <!-- Chat section (if logged in) -->
  <% if (user) { %>
    <p>Welcome to the chat, <%= user.username %>!</p>
    <script> window.currentUser = "<%= user.username %>"; </script>
    <a href="users/logout"><button>Logout</button></a>
  <div class="window glass active">
    <div class="title-bar">
      <div class="title-bar-text">C-LOG</div>
      <div class="title-bar-controls">
        <button aria-label="Minimize"></button>
        <button aria-label="Maximize"></button>
        <button aria-label="Close"></button>
      </div>
    </div>

    <div class="window-body has-space">
      <div class="chat-container">

        <div id="chat-bubble" class="bubble-container"></div>

        <form id="send-container" class="input-container">
            <textarea
              class="text-input"
              id="message-input"
              placeholder="Type message here..."
            ></textarea>
            <button type="submit" id="send-button">Send</button>
        </form>
      </div>
    </div>
  </div>
  <% } else { %>
    <p>Please log in to access chat</p>
  <% } %>


</body>
</html>